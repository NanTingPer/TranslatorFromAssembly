<Window
    x:Class="TranslatorFromAssembly.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:TranslatorFromAssembly.ViewModels"
    Title="TranslatorFromAssembly"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding MainWindowModel, Source={StaticResource ServiceLocator}}"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">
    <Interaction.Behaviors>
        <EventTriggerBehavior EventName="Initialized">
            <InvokeCommandAction Command="{Binding InitCommand}" />
        </EventTriggerBehavior>
    </Interaction.Behaviors>
    <Grid RowDefinitions="40,*">
        <Label Grid.Row="0" Background="AliceBlue" />
        <ContentControl Grid.Row="1" Content="{Binding View}" />
    </Grid>
</Window>
